<!DOCTYPE html>
<html>
  <head>
    <title>Kiiki Garden</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   

   <% if user_signed_in? %>

 <div><%= link_to current_user.email, edit_user_registration_path %></div>>
 <div><%= link_to "Logout", destroy_user_session_path, method: :delete %></div>

  <% else %>
 
 <div><%= link_to "Sign Up", new_user_registration_path %></div>
 <div><%= link_to "Login", new_user_session_path %></div>

  <% end %>
  </head>

  <body>
    <p class="Notice"><%= notice %></p>
       <p class="Alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
